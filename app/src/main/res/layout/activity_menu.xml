<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:text="Welcome, Rasul"
        android:layout_marginTop="24dp"
        android:singleLine="false"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:background="@drawable/rectangular_borders_colored"
        android:id="@+id/menu_balance"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:layout_width="340dp"
        android:text="Balance"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/ic_money_balance"
        app:iconSize="40dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:background="@drawable/rectangular_borders_colored"
        android:id="@+id/menu_money_transfer"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_width="340dp"
        android:text="Money transfer"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/ic_money_send"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_balance" />

    <Button
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:background="@drawable/rectangular_borders_colored"
        android:id="@+id/menu_password"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_width="340dp"
        android:text="Change password"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/ic_password"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_money_transfer" />

    <TextView
        android:id="@+id/menu_seurity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:text="Your security level is: 1"
        android:layout_marginTop="24dp"
        android:singleLine="false"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_password"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
